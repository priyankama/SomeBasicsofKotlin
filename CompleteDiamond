fun main(args: Array<String>) {
    println("Hello, world!")
    for(i in 1..5){
        for(k in 4 downTo i){
            print(" ")
        }
        for(j in 1..i){
            print("* ")
        }
        println()
    }
    for(i in 1..4){
        for(k in 1..i){
            print(" ")
        }
        for(j in 4 downTo i){
            print("* ")
        }
        println()
    }
}
